{
  "name": "Get quotes by author",
  "method": "GET",
  "pattern": "/shout/{author_id}",
  "parameters": [
    {
      "in": "path",
      "name": "author_id",
      "description": "The author id of quotes to return",
      "required": true,
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    {
      "in": "query",
      "name": "limit",
      "description": "The numbers of items to return",
      "required": false,
      "type": "integer",
      "minimum": 1,
      "maximum": 10,
      "default": 10
    }
  ],
  "responses": [
    {
      "code": "200",
      "description": "Get quotes by author correctly"
    },
    {
      "code": "400",
      "description": "Bad Request"
    },
    {
      "code": "404",
      "description": "Author not found"
    },
    {
      "code": "500",
      "description": "Unexpected api error"
    }
  ]
}
